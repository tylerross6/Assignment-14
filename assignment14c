---
- name: create dev-report file
  hosts: 10.0.0.178
  become: true

  vars:
   file_owner: james
   file_group: james
   file_path: "/tmp/dev-report"

  tasks:
  - name: create dev-report file
    file:
    path: /tmp/dev-report
    state: touch
    owner: james
    group: james
    mode: 777

  - name: add line to playbook
     lineinfile:
      path: /tmp/dev-report
      line: This is my test to add a new line to file with a Ansible Playbook
      create: yes
